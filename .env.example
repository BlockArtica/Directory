# Tradies Directory â€” Environment Variables
# Copy to .env.local and fill in your values
# NEVER commit .env.local to git
# ============================================

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# --- Stripe ---
# Set to "true" to enable Stripe checkout for paid subscriptions
# Set to "false" to bypass Stripe and activate any tier directly (testing mode)
NEXT_PUBLIC_ENABLE_STRIPE=false
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# --- OpenAI (AI-powered search) ---
# Set to "true" to use GPT for smart natural language parsing
# Set to "false" to use keyword matching fallback (no API calls)
NEXT_PUBLIC_ENABLE_AI=false
NEXT_PUBLIC_OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# --- Google Maps ---
# Set to "true" to use Google Places Autocomplete for verified addresses
# Set to "false" to use manual text input (accepts any address)
NEXT_PUBLIC_ENABLE_GOOGLE_MAPS=false
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# --- Admin ---
ADMIN_EMAIL=your_admin_email@example.com

# --- Facebook Group ---
NEXT_PUBLIC_FB_GROUP_NAME=Northern Beaches Community
NEXT_PUBLIC_ENABLE_FB_POSTING=false

# --- Branding ---
NEXT_PUBLIC_SITE_NAME=Tradies Directory
